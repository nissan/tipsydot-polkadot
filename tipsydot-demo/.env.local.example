# TipsyDot Environment Configuration
# Copy to .env.local and adjust for your environment

# Network Mode: local | testnet | production
NEXT_PUBLIC_NETWORK_MODE=local

# ============================================
# LOCAL CONFIGURATION (OmniNode + Chopsticks)
# ============================================

# OmniNode with Revive (Local EVM)
NEXT_PUBLIC_LOCAL_EVM_RPC=http://localhost:8546
NEXT_PUBLIC_LOCAL_EVM_WS=ws://localhost:9945
NEXT_PUBLIC_LOCAL_EVM_CHAIN_ID=420420421
NEXT_PUBLIC_LOCAL_EVM_PARA_ID=2000

# Chopsticks AssetHub Fork
NEXT_PUBLIC_LOCAL_ASSETHUB_WS=ws://localhost:8000
NEXT_PUBLIC_LOCAL_ASSETHUB_PARA_ID=1000

# ============================================
# TESTNET CONFIGURATION (Paseo)
# ============================================

# Paseo AssetHub (Real testnet)
NEXT_PUBLIC_TESTNET_ASSETHUB_WS=wss://paseo-asset-hub-rpc.dwellir.com
NEXT_PUBLIC_TESTNET_ASSETHUB_PARA_ID=1000

# Paseo EVM Chain (e.g., Moonriver Alpha or custom)
NEXT_PUBLIC_TESTNET_EVM_RPC=https://moonriver-alpha.api.onfinality.io/public
NEXT_PUBLIC_TESTNET_EVM_WS=wss://moonriver-alpha.api.onfinality.io/public-ws
NEXT_PUBLIC_TESTNET_EVM_CHAIN_ID=1285
NEXT_PUBLIC_TESTNET_EVM_PARA_ID=2023

# ============================================
# PRODUCTION CONFIGURATION (Polkadot)
# ============================================

# Polkadot AssetHub
NEXT_PUBLIC_PROD_ASSETHUB_WS=wss://polkadot-asset-hub-rpc.dwellir.com
NEXT_PUBLIC_PROD_ASSETHUB_PARA_ID=1000

# Production EVM Chain (e.g., Moonbeam)
NEXT_PUBLIC_PROD_EVM_RPC=https://rpc.api.moonbeam.network
NEXT_PUBLIC_PROD_EVM_WS=wss://wss.api.moonbeam.network
NEXT_PUBLIC_PROD_EVM_CHAIN_ID=1284
NEXT_PUBLIC_PROD_EVM_PARA_ID=2004

# ============================================
# ASSET CONFIGURATION
# ============================================

# USDC Asset IDs by network
NEXT_PUBLIC_LOCAL_USDC_ASSET_ID=1337
NEXT_PUBLIC_TESTNET_USDC_ASSET_ID=1337
NEXT_PUBLIC_PROD_USDC_ASSET_ID=1984

# Precompile Addresses (may vary by chain)
NEXT_PUBLIC_ASSETS_PRECOMPILE=0x0000000000000000000000000000000000000802
NEXT_PUBLIC_XCM_PRECOMPILE=0x0000000000000000000000000000000000000803
NEXT_PUBLIC_BALANCE_PRECOMPILE=0x0000000000000000000000000000000000000801

# ============================================
# LIQUIDITY & SWAP CONFIGURATION (Future)
# ============================================

# Hydration DeFi Integration
NEXT_PUBLIC_HYDRATION_ROUTER=
NEXT_PUBLIC_HYDRATION_POOL_ID=

# Moonbeam DEX Integration
NEXT_PUBLIC_MOONBEAM_DEX_ROUTER=
NEXT_PUBLIC_MOONBEAM_USDC_POOL=

# ============================================
# CONTRACT ADDRESSES
# ============================================

# Will be populated after deployment
NEXT_PUBLIC_DONATION_CONTRACT=
NEXT_PUBLIC_MOCK_USDC_CONTRACT=

# ============================================
# API KEYS (Optional)
# ============================================

# Subscan API for transaction tracking
NEXT_PUBLIC_SUBSCAN_API_KEY=

# Coingecko for price feeds
NEXT_PUBLIC_COINGECKO_API_KEY=

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_SWAP=false
NEXT_PUBLIC_ENABLE_LIQUIDITY_POOLS=false
NEXT_PUBLIC_ENABLE_REAL_XCM=true
NEXT_PUBLIC_ENABLE_PAPI_MONITOR=true

# ============================================
# DEBUG
# ============================================

NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_LOG_LEVEL=info